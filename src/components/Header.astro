---
import { Image } from 'astro:assets';
import agusLogo from '../assets/agus-logo.jpg';

interface Props {
  section: 'desarrollo' | 'hacking';
  currentPage?: string;
}

const { section, currentPage } = Astro.props;

const desarrolloLinks = [
  { href: '/desarrollo', label: 'INICIO', icon: 'home' },
  { href: '/desarrollo-proyecto', label: 'PROYECTOS', icon: 'code' },
];

const hackingLinks = [
  { href: '/hacking', label: 'INICIO', icon: 'home' },
  { href: '/hacking-writeups', label: 'WRITEUPS', icon: 'shield' },
];

const links = section === 'desarrollo' ? desarrolloLinks : hackingLinks;
const title = section === 'desarrollo' ? 'Portfolio Desarrollo' : 'Portfolio Hacking Red Team';

const getIcon = (icon: string) => {
  const icons: Record<string, string> = {
    home: 'M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z',
    code: 'M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z',
    shield: 'M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z',
  };
  return icons[icon];
};
---

<header class="fixed left-0 top-0 h-screen w-64 bg-white/90 backdrop-blur-sm border-r-2 border-[#61A2A7] shadow-xl flex flex-col p-6">
  <!-- Logo y título -->
  <div class="flex flex-col items-center text-center mb-8">
    <Image
      src={agusLogo}
      alt="agus-logo"
      width={120} 
      height={120}
      class="rounded-full border-4 border-[#61A2A7] mb-4 shadow-lg"
    />
    <h1 class="text-xl font-bold text-gray-900 mb-2">Agustín Arla</h1>
    <p class="text-sm text-gray-600 italic">
      {title}
    </p>
  </div>

  <!-- Botón volver -->
  <a 
    href="/"
    class="mb-6 px-4 py-2 text-center rounded-xl bg-gray-200 text-gray-700 hover:bg-[#61A2A7] hover:text-white transition-all duration-300 font-medium"
  >
    ← Volver al inicio
  </a>

  <!-- Navegación -->
  <nav class="flex-1">
    <ul class="flex flex-col gap-3">
      {links.map((link) => (
        <li>
          <a 
            href={link.href}
            class={`flex items-center gap-3 px-4 py-3 rounded-xl font-medium transition-all duration-300 ${
              currentPage === link.href
                ? 'bg-[#61A2A7] text-white shadow-lg' 
                : 'text-gray-700 hover:bg-[#61A2A7] hover:text-white'
            }`}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d={getIcon(link.icon)} />
            </svg>
            <span>{link.label}</span>
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <!-- Redes sociales -->
  <div class="flex items-center justify-center gap-4 mt-8 pt-6 border-t-2 border-[#61A2A7]/30">
    <a href="https://github.com/agustinnarla" class="text-gray-600 hover:text-[#61A2A7] transition-colors duration-200">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
      </svg>
    </a>
    <a href="https://www.linkedin.com/in/agustin-arla-2a1198304/" class="text-gray-600 hover:text-[#61A2A7] transition-colors duration-200">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
      </svg>
    </a>
  </div>
</header>

