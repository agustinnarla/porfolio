---
interface Props {
  section?: 'desarrollo';
}

const proyectos = [
  {
  titulo: 'Sistema de Gestión Escolar',
  descripcion: 'Aplicación multiplataforma para la gestión integral del colegio Nuestra Señora del Huerto. Incluye registro de alumnos, docentes y profesores, con módulos de calificaciones, asistencias, amonestaciones y más.',
  tecnologias: ['React Native', 'Node.js', 'PostgreSQL', 'Express'],
  github: 'https://github.com/tuusuario/gestion-escolar',
  demo: null, 
  destacado: true
}
  
];
---

<section class="my-12">
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-[#61A2A7] mb-6">Proyectos Destacados</h2>
  </div>

  <!-- Proyectos Grid -->
  <div class="grid md:grid-cols-2 gap-8">
    {proyectos.map((proyecto) => (
      <article class={`bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 ${proyecto.destacado ? 'border-4 border-[#61A2A7]' : ''}`}>
        {/* Badge de destacado */}
        {proyecto.destacado && (
          <div class="bg-[#61A2A7] text-white px-4 py-2 text-sm font-bold">
            ⭐ DESTACADO
          </div>
        )}
        
        {/* Contenido */}
        <div class="p-6">
          <h3 class="text-2xl font-bold text-gray-900 mb-3">{proyecto.titulo}</h3>
          
          <p class="text-gray-600 mb-4 leading-relaxed">{proyecto.descripcion}</p>
          
          {/* Tecnologías */}
          <div class="flex flex-wrap gap-2 mb-6">
            {proyecto.tecnologias.map((tech) => (
              <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium">
                {tech}
              </span>
            ))}
          </div>
          
          {/* Botones */}
          <div class="flex gap-3">
            {proyecto.github && (
              <a 
                href={proyecto.github}
                target="_blank"
                class="flex items-center gap-2 px-4 py-2 border-2 border-gray-300 text-gray-700 rounded-lg hover:border-gray-400 hover:bg-gray-50 transition-colors font-medium"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                GitHub
              </a>
            )}
            
            {proyecto.demo && (
              <a 
                href={proyecto.demo}
                target="_blank"
                class="flex items-center gap-2 px-4 py-2 bg-[#61A2A7] hover:bg-[#4f8a8e] text-white rounded-lg transition-colors font-medium"
              >
                Ver Demo →
              </a>
            )}
          </div>
        </div>
      </article>
    ))}
  </div>
  
  {/* CTA al final */}
  <div class="mt-16 text-center">
    <p class="text-gray-600 mb-4">¿Quieres ver más proyectos?</p>
    <a 
      href="https://github.com/tuusuario"
      target="_blank"
      class="inline-flex items-center gap-2 px-6 py-3 bg-[#61A2A7] hover:bg-[#4f8a8e] text-white rounded-lg transition-colors font-medium text-lg"
    >
      Visita mi GitHub →
    </a>
  </div>
</section>