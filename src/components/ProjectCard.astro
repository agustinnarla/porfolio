---
const projectList = [
  {
    titulo: 'Sistema de Gestión Escolar',
    descripcion: 'Un sistema realizado como proyecto final de la carrera Analista de Sistema en el Colegio Universitario IES21',
    descripcionTecnica:
      'Sistema utilizado para la gestión de alumnos, profesores, preceptores, carga de notas, amonestaciones, asistencia, observaciones, login y autentificación.',
    tecnologias: ['React Native', 'Node.js', 'PostgreSQL', 'Express'],
    github: 'https://github.com/agustinnarla/GestionColegio',
    imagenes: [
      { nombre: 'Login', ruta: '/project/login.png' },
      { nombre: 'Home', ruta: '/project/home.png' },
      { nombre: 'Asistencia', ruta: '/project/asistencia.png' },
      { nombre: 'Hora', ruta: '/project/hora.png' },
      { nombre: 'Nota', ruta: '/project/nota.png' },
      { nombre: 'Gestión', ruta: '/project/gestion.png' }
    ]
  }
];
---

<section class="my-12 max-w-7xl mx-auto px-8">
    <div class="space-y-16">
       {projectList.map((proyecto) => (
         <article class="bg-white rounded-3xl shadow-2xl overflow-hidden">
           <div class="bg-gradient-to-r from-[#61A2A7] to-[#4f8a8e] p-8 text-white">
             <h2 class="text-4xl font-bold mb-3">{proyecto.titulo}</h2>
             <p class="text-lg opacity-90">{proyecto.descripcion}</p>
           </div>

           <div class="p-8">
             <div class="mb-8">
               <h3 class="text-2xl font-bold text-gray-900 mb-4">Descripción Técnica</h3>
               <p class="text-gray-700 leading-relaxed text-lg">{proyecto.descripcionTecnica}</p>
             </div>

             <div class="mb-8">
               <h3 class="text-2xl font-bold text-gray-900 mb-4">Tecnologías Utilizadas</h3>
               <div class="flex flex-wrap gap-3">
                 {proyecto.tecnologias.map((tech) => (
                   <span class="px-5 py-2 bg-[#61A2A7] text-white rounded-full text-base font-semibold shadow-md">
                     {tech}
                   </span>
                 ))}
               </div>
             </div>

             <div class="mb-8">
               <h3 class="text-2xl font-bold text-gray-900 mb-4">Capturas de Pantalla</h3>
               <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 project-card-gallery">
                 {proyecto.imagenes.map((imagen) => (
                   <div class="group relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 cursor-pointer bg-white">
                     <img
                       src={imagen.ruta}
                       alt={imagen.nombre}
                       class="w-full h-auto object-cover"
                     />
                     <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-center pb-4 pointer-events-none">
                       <span class="text-white font-semibold text-xl">
                         {imagen.nombre}
                       </span>
                     </div>
                   </div>
                 ))}
               </div>

               <!-- Overlay / Lightbox -->
               <div class="overlay hidden fixed inset-0 bg-black bg-opacity-80 items-center justify-center z-50">
                 <button class="overlay-close absolute top-6 right-6 text-white bg-black/40 rounded-full p-2">✕</button>
                 <img class="overlay-img max-w-[90%] max-h-[85vh] rounded-lg shadow-lg" src="" alt="Imagen ampliada" />
               </div>

               <script src="/js/project-carousel.js" type="module"></script>
             </div>

             <div class="flex justify-center pt-6">
               <a 
                 href={proyecto.github}
                 target="_blank"
                 rel="noopener noreferrer"
                 class="flex items-center gap-3 px-8 py-4 bg-gray-900 text-white rounded-xl hover:bg-gray-800 transition-colors font-semibold text-lg shadow-lg hover:shadow-xl"
               >
                 <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                   <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                 </svg>
                 Ver código en GitHub
               </a>
             </div>
           </div>
         </article>
       ))}     
    </div>
</section>